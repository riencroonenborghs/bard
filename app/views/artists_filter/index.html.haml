- content_for :meta_title do
  \- '#{@filter}' Artists

.p-8
  .text-4xl.uppercase.text-gray-400
    = link_to artists_path do
      ARTISTS

.p-8.pt-1.pb-1.w-full
  .flex.flex-row
    - artist_letters.each do |letter|
      .text-gray-600.pe-4.m-1
        - if letter == @filter
          .text-gray-400
            = letter.upcase
        - else
          = link_to filter_artists_path(filter: letter.upcase) do
            = letter.upcase

.p-8.w-full.grid.grid-cols-4.gap-4
  - @artists.each do |artist|
    = link_to artist_path(artist) do
      .rounded-lg.shadow-lg.bg-gray-700.p-4
        .flex.flex-col
          .flex.flex-row.justify-center
            .rounded-lg.shadow-sm.bg-gray-600.w-32
              .flex.flex-row.justify-center.p-2
                - if artist.valid_image?
                  = image_tag artist.last_fm_image
                - else
                  = render IconComponent.new(name: :artist, size: 12)
          .flex.flex-row.justify-center.pt-4
            .text-lg.font-bold
              = artist.name
          .flex.flex-row.justify-center
            .text-xs.font-thin
              = pluralize(artist.albums.count, "Album", "Albums")


.p-8
  = paginate @artists
